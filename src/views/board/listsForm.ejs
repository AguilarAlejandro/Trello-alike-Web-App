<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="col-md-6 mx-auto mt-5">
    <div class="card text-center">
        <div class="card-header">
            <h3 class="display-4 my-auto" style="text-align:center;">Add a new list to <%=currentBoard.boardTitle%></h3>
        </div>
        <div class="card-body">
            <form action="/board/:id/addlist" method="post">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Title</span>
                    </div>
                    <input type="text" class="form-control" name="title" placeholder="Write list title here" autofocus>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Description</span>
                    </div>
                    <textarea name="description" class="form-control" placeholder="Add your description here"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

</html>