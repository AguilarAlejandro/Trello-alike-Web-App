<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="col-md-6 mx-auto mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="display-4 my-auto" style="text-align:center;">Edit board</h3>
        </div>
        <div class="card-body">
            <form action="/board/<%=currentBoard._id%>/edit?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Title</span>
                    </div>
                    <input type="text" class="form-control" name="title" value="<%=currentBoard.boardTitle%>">
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Description</span>
                    </div>
                    <textarea name="description" class="form-control"><%=currentBoard.boardDescription%></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block btn-sm">Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>