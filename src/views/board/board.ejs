<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<%- include('../partials/messages.ejs') %>

<% if (JSON.stringify(boards)!='[]') { %>
<h1 class="display-4" style="text-align:center;">Your boards</h1> 
<% } %>
<hr class="mb-4">
<div class="row justify-content-center">
    <a href="/addboard" style="color:white; text-decoration:none;">
        <div class="card createNewButton">
            <div class="row">
                <div class="col">
                    <h1 class="display-6"
                        style="text-align:right; position:relative; top:60%; transform: translateY(-60%); left:25%;">
                        <i class="fa fa-sticky-note" aria-hidden="true"></i>
                    </h1>
                </div>
                <div class="col-8">
                    <h1 class="display-4" style="text-align: left; position:relative; top:50%; transform: translateY(-50%);
              font-size: 24px;">New board</h1>
                </div>
            </div>
        </div>
    </a>
</div>

<% if (JSON.stringify(boards)=='[]') { %>
<div class="row">
    <h1 class="display-4 mx-auto">No boards to display</h1>
</div>
<div class="row">
    <img src="/images/data-not-found.png" alt="No boards found" class="mx-auto">
</div>
<% } else { %>

<div class="row p-5">
    <% boards.forEach(board =>  { %>

    <div class="col-md-2 boardsContainer">
        <div class="card" id="boards">
            <div class="d-flex justify-content-between">
                <a href="/board/<%=board._id%>/edit" style="z-index:2;">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                </a>
                <form action="/board/<%=board._id%>/delete?_method=DELETE" method="POST" style="z-index:2;">
                    <input type="hidden" name="method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-sm">
                        <i class="fa fa-times" style="width:20px;" aria-hidden="true"></i>
                    </button>
                </form>
            </div>
            <a href="/board/<%=board._id%>" class="stretched-link">
                <h4 style="text-align:center;"><%=board.boardTitle%></h4>
            </a>
           <!-- <div class="card-body">
                <p><%=board.boardDescription%></p>
            </div> -->
        </div> 

    </div>

<%})%>
</div>
<%}%>
</html>

<script src="/javascripts/bodyMargin.js"></script>